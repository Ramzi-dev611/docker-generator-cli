FROM python:{{python_version}}

WORKDIR /app

COPY ./requirements.txt /app/requirements.txt

RUN pip install --no-cache-dir --upgrade -r /app/requirements.txt

COPY ./app /app/app

{{{environment_variables}}}

EXPOSE {{port}}

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "{{port}}"]
